{
  "manifest_version": 3,
  "name": "WHEELY: Wheel scroll for Linux",
  "short_name": "WHEELY",
  "version": "2.0",
  "description": "Add ability for Linux to scroll pages by pressing mouse wheel.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "wheely-icon.png"
    }
  },
  "offline_enabled": true
}
